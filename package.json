{
  "name": "lyo-qr-json",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build": "cd backend && npm ci && npm run build && npx prisma generate",
    "build:with-migration": "cd backend && npm ci && npm run build && npx prisma generate && npx prisma migrate deploy",
    "start": "cd backend && npm run start:prod",
    "start:prod": "cd backend && npm run start:prod",
    "migrate:deploy": "cd backend && npm run prisma:migrate:deploy",
    "db:push": "cd backend && npm run prisma:db:push",
    "seed": "cd backend && npm run prisma:seed",
    "deploy": "cd backend && bash scripts/deploy.sh"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}

